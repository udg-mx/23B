<div class="w-full max-w-md mx-auto mt-6 w-3/5">
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4" role="alert">
        <p class="font-bold">Error:</p>
        <p>{{ message|raw }}</p>
    </div>
    <div class="mt-4 text-center">
        <a href="{{ back|default('javascript: window.history.back();')|raw }}" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded cursor-pointer">Volver</a>
    </div>
</div>