
<table class="min-w-full bg-white border rounded shadow-md">
    <thead>
    <tr>
        <th class="px-4 py-2 border-b justify-start">Nombre del documento</th>
        <th class="px-4 py-2 border-b">&nbsp;</th>
    </tr>
    </thead>
    <tbody>

        {% if documents %}
            {% for document in documents %}
                <tr>
                    <td class="px-4 py-2 border-b">{{ document.name|raw }}</td>
                    <td class="px-4 py-2 border-b flex space-x-2 justify-end">
                        <a href="/?action=document_edit&id={{ document.id }}" class="hover:text-blue-700"><i class="far fa-edit text-blue-500"></i></a>
                        <a href="/?action=document_download_pdf&id={{ document.id }}" class="hover:text-green-700"><i class="far fa-file-pdf text-green-500"></i></a>
                        <a href="/?action=document_download_doc&id={{ document.id }}" class="hover:text-indigo-700"><i class="far fa-file-word text-indigo-500"></i></a>
                        <a href="/?action=document_download_xls&id={{ document.id }}" class="hover:text-purple-700"><i class="far fa-file-excel text-purple-500"></i></a>
                        <a href="/?action=document_remove&id={{ document.id }}" class="hover:text-red-700"><i class="fas fa-trash text-red-500"></i></a>
                    </td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td class="px-4 py-2 border-b">No hay documentos</td>
                <td class="px-4 py-2 border-b">&nbsp;</td>
            </tr>
        {% endif %}

    <!-- Repite la fila <tr> para cada documento adicional -->
    </tbody>
</table>
<hr>
<div class="flex justify-end mt-5">
    <a href="/?action=documents_new" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
        Agregar Documento
    </a>
</div>